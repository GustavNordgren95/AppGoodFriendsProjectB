@page "{id:guid}"
@model AppGoodFriendRazor.Pages.FriendDetailsModel
@{
}

<!-- Page view-friend-detail -->
<div class="container px-4 py-4" id="view-friend">
    <h2 class="pb-2 border-bottom">View details of a friend</h2>
    <p>Below you find all the details of my friend. You can also modify the pets my friend has and the quotes he/she likes.</p>

    <div class="row row-cols-1 row-cols-lg-4 align-items-stretch g-4 py-5">
        <div class="col-md-7 col-lg-8">
            <form class="needs-validation" novalidate>
                <div class="row g-3">
                    <div class="col-sm-6">
                        <label for="firstName" class="form-label">First name</label>
                        <input type="text" class="form-control" id="firstName" value="@Model.Friend?.FirstName" readonly>

                    </div>

                    <div class="col-sm-6">
                        <label for="lastName" class="form-label">Last name</label>
                        <input type="text" class="form-control" id="lastName" value="@Model.Friend.LastName" readonly>
                    </div>

                    <div class="col-sm-6">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" value="@Model.Friend.Email" readonly>
                    </div>

                    <div class="col-sm-6">
                        <label for="birthday" class="form-label">Birthday</label>
                        <input type="date" class="form-control" id="birthday" value=@Model.Friend.Birthday?.ToString("yyyy-MM-dd") ?? readonly "No birthday found">
                    </div>

                    <div class="col-12">
                        <label for="address" class="form-label">Address</label>
                        <input type="text" class="form-control" id="address" value="@Model.Friend.Address?.StreetAddress" ?? readonly>
                    </div>

                    <div class="col-md-3">
                        <label for="zip" class="form-label">Zip</label>
                        <input type="text" class="form-control" id="zip" value="@Model.Friend.Address?.ZipCode.ToString()" readonly>
                    </div>

                    <div class="col-md-4">
                        <label for="city" class="form-label">City</label>
                        <input type="text" class="form-control" id="city" value="@Model.Friend.Address?.City" readonly>
                    </div>

                    <div class="col-md-5">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" class="form-control" id="country" value="@Model.Friend.Address?.Country" readonly>
                    </div>
                </div>

                <a class="w-100 btn btn-primary btn-lg my-4" asp-page="/EditFriend" asp-route-id="@Model.Friend.FriendId">
                   
                    Edit Friend Details
                </a>

            </form>
        </div>

        <div class="col-md-7 col-lg-8">
            <h3 class="pb-2">
                My friend's pets
                <button type="button" class="btn btn-success btn-sm" onclick="openAddPetModal()">Add Pet</button>
            </h3>

            @foreach (var pet in Model.Friend.Pets)
            {
                <div class="row mb-2 text-center">
                    <div class="col-md-10 themed-grid-col">@pet.Name the @pet.Mood @pet.Kind</div>
                    <div class="col-md-2 themed-grid-col">
                        <button type="button" class="btn btn-secondary btn-sm" onclick="openPetEditModal('edit', '@pet.PetId', '@pet.Name', '@pet.Kind', '@pet.Mood')">Edit</button>
                        <a href="#modals" class="btn btn-danger btn-sm" type="button">Delete</a>
                    </div>
                </div>
            }
            
        </div>

        <div class="col-md-7 col-lg-8">
            <h3 class="pb-2">
                My friend's favorite quotes
                <a href="#list-of-quotes" class="btn btn-success btn-sm" type="button">Add</a>
            </h3>

            @foreach (var quote in Model.Friend.Quotes)
            {
                <div class="row mb-2 text-center">
                    <div class="col-md-10 themed-grid-col">
                        @quote.Quote
                        <div class="col-md-16  text-end">@quote.Author</div>
                    </div>
                    <div class="col-md-2 themed-grid-col">
                        <a href="#add-edit-quote" class="btn btn-secondary btn-sm" type="button">Edit</a>
                        <a href="#modals" class="btn btn-danger btn-sm" type="button">Delete</a>
                    </div>
                </div>
            }

        </div>
    </div>
</div>

<!-- Edit Pet Modal -->
<div class="modal fade" id="editPetModal" tabindex="-1" aria-labelledby="editPetModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editPetModalLabel">Edit Pet</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Form for editing pet details -->
                <form id="editPetForm" method="post" asp-page-handler="UpdatePet">
                    <input type="hidden" id="petId" name="petId" value="" />
                    <input type="hidden" id="friendId" name="friendId" value="@Model.Friend.FriendId" />
                    <div class="mb-3">
                        <label for="petName" class="form-label">Pet Name</label>
                        <input type="text" id="petName" name="petName" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label for="petKind" class="form-label">Pet Kind</label>
                        <select id="petKind" name="petKind" class="form-control">
                            <option value="Dog">Dog</option>
                            <option value="Cat">Cat</option>
                            <option value="Rabbit">Rabbit</option>
                            <option value="Fish">Fish</option>
                            <option value="Bird">Bird</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="petMood" class="form-label">Pet Mood</label>
                        <select id="petMood" name="petMood" class="form-control">
                            <option value="Happy">Happy</option>
                            <option value="Hungry">Hungry</option>
                            <option value="Lazy">Lazy</option>
                            <option value="Sulky">Sulky</option>
                            <option value="Buzy">Buzy</option>
                            <option value="Sleepy">Sleepy</option>
                        </select>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" form="editPetForm" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

<!-- Add Pet Modal -->
<div class="modal fade" id="addPetModal" tabindex="-1" aria-labelledby="addPetModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addPetModalLabel">Add New Pet</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Form for adding new pet details -->
                <form id="addPetForm" method="post" asp-page-handler="SavePet">
                    <!-- FriendId should be included to associate the pet with the friend -->
                    <input type="hidden" id="friendId" name="friendId" value="@Model.Friend.FriendId" />
                    <div class="mb-3">
                        <label for="addPetName" class="form-label">Pet Name</label>
                        <input type="text" id="addPetName" name="petName" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label for="petKind" class="form-label">Pet Kind</label>
                        <select id="petKind" name="petKind" class="form-control">
                            <option value="Dog">Dog</option>
                            <option value="Cat">Cat</option>
                            <option value="Rabbit">Rabbit</option>
                            <option value="Fish">Fish</option>
                            <option value="Bird">Bird</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="petMood" class="form-label">Pet Mood</label>
                        <select id="petMood" name="petMood" class="form-control">
                            <option value="Happy">Happy</option>
                            <option value="Hungry">Hungry</option>
                            <option value="Lazy">Lazy</option>
                            <option value="Sulky">Sulky</option>
                            <option value="Buzy">Buzy</option>
                            <option value="Sleepy">Sleepy</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" form="addPetForm" class="btn btn-primary">Add Pet</button>
            </div>
        </div>
    </div>
</div>


<script src="~/js/petModal.js"></script>