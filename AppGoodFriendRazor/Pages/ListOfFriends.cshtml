@page
@model AppGoodFriendRazor.Pages.ListOfFriendsModel
@{
    ViewData["Title"] = "Friend List";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@attribute [IgnoreAntiforgeryToken]

<!-- Page list-of-friends -->
<div class="container px-4 py-4" id="list-of-friends">
    <h2 class="pb-2 border-bottom">List of friends</h2>
    <div class="row mb-2 text-center">
        <div class="col-md-4 themed-grid-col">Name</div>
        <div class="col-md-4 themed-grid-col">Address</div>
        <div class="col-md-2 themed-grid-col">Info</div>
        <div class="col-md-2 themed-grid-col">Actions</div>
    </div>
    @foreach (var friend in Model.Friends)
    {
        <div class="row mb-2 text-center">
            <div class="col-md-4 themed-grid-col">
                @friend.FirstName, @friend.LastName
                <div class="col-md-16">@friend.Email</div>
            </div>
            <div class="col-md-4 themed-grid-col">
                @if (friend.Address != null)
                {
                    @friend.Address.StreetAddress
                    <div class="col-md-16">@friend.Address.ZipCode,  @friend.Address.City</div>
                    <div class="col-md-16">@friend.Address.Country</div>
                }
                else
                {
                    <text>No address found</text>
                }
            </div>
            <div class="col-md-2 themed-grid-col">
                <div class="col-md-16">
                    @if (friend.Birthday != null)
                    {
                       <text>Born: </text> @friend.Birthday.Value.ToString("yyyy-MM-dd")
                    }
                    else
                    {
                        <text>No birthday found</text>
                    }
                </div>
                <div class="col-md-16">Pets: @friend.Pets.Count()</div>
                <div class="col-md-16">Quotes: @friend.Quotes.Count()</div>
            </div>
            <div class="col-md-2 themed-grid-col">
                <a asp-page="/FriendDetails" asp-route-id="@friend.FriendId" class="btn btn-primary btn-sm">View</a>
            </div>
        </div>
    }
</div>

@if (Model.TotalPages > 1)
{
    <div class="text-center mt-4">
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-page="./ListOfFriends" asp-route-currentPage="@i" asp-route-filter="@Model.CurrentFilter">@i</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
}