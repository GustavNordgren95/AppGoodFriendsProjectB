@page
@model AppGoodFriendRazor.Pages.AddQuoteModel

<div class="container px-4 py-4">
    <h2>Add Quote to Friend</h2>
    <form method="post">
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label for="SelectedQuoteId" class="form-label">Select a Quote:</label>
            <select asp-for="QuoteIM.SelectedQuoteId" asp-items="@(new SelectList(Model.AvailableQuotes, "QuoteId", "Quote"))" class="form-select">
                <option value="">Select a quote...</option>
                @foreach (var quote in Model.AvailableQuotes)
                {
                    <option value="@quote.QuoteId">@quote.Quote - @quote.Author</option>
                }
            </select>
            <span asp-validation-for="QuoteIM.SelectedQuoteId" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Add Quote</button>
    </form>
</div>


