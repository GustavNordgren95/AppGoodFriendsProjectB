@page
@model AppGoodFriendRazor.Pages.AddPetModel
@{
    var animalKinds = Enum.GetValues(typeof(Models.enAnimalKind));
    var animalMoods = Enum.GetValues(typeof(Models.enAnimalMood));
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<div class="container px-4 py-4">
            <h2 class="modal-title" id="addPetModalLabel">Add New Pet</h2>
          <div class="mb-3">
            <form id="addPetForm" method="post" asp-page-handler="SavePet">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label for="PetIM_Name" class="form-label">Pet Name</label>
                    <input type="text" asp-for="PetIM.Name" class="form-control" />
                    <span asp-validation-for="PetIM.Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="PetIM_Kind" class="form-label">Pet Kind</label>
                    <select asp-for="PetIM.Kind" class="form-control">
                        @foreach (var kind in animalKinds)
                        {
                            <option value="@kind">@kind</option>
                        }
                    </select>
                    <span asp-validation-for="PetIM.Kind" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="PetInput_Mood" class="form-label">Pet Mood</label>
                    <select asp-for="PetIM.Mood" class="form-control">
                        @foreach (var mood in animalMoods)
                        {
                            <option value="@mood">@mood</option>
                        }
                    </select>
                    <span asp-validation-for="PetIM.Mood" class="text-danger"></span>
                </div>
            </form>
        </div>

        <button type="submit" class="btn btn-primary">Add Pet</button>
</div>
